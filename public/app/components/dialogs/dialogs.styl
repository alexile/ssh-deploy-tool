.dialog
  min-width: 320px
  width: 320px
  position: fixed
  height: 570px
  overflow-y: scroll
  top: 0
  bottom: 0
  right: 0
  left: 0
  margin: auto
  background-color: #ffffff
  z-index: 11
  border-radius: 0.5em
  padding: 1em
  box-sizing: border-box
  max-height: 100vh
  &--wide
    width: 900px
    max-width: 100%
  h3
    padding: 0 0.5em
    cursor: default
  &__subtitle
    padding: 0 0.5em
    cursor: default
    font-size: 0.8em
.wrapper
  position: fixed
  width: 100%
  height: 100vh
  top: 0
  left: 0
  background-color: #212121
  opacity: 0.8
  z-index: 10
