.dashboard
  padding: 1em 2em
  background-color: #efefef
  // height: calc(100vh - 160px)
  height: calc(100vh - 85px)
  display: grid
  grid-template: 'a b' 'd c'
  grid-gap: 10px
  &__card
    background-color: #ffffff
    border-radius: 0.5em
    height: 100%
    padding-top: 0.5em
    box-sizing: border-box
  &__cell
    &:nth-of-type(1)
      grid-area: a
    &:nth-of-type(2)
      grid-area: b
    &:nth-of-type(3)
      grid-area: c
    &:nth-of-type(3)
      grid-area: d
  &-controls
    padding: 1em
    &__title
      font-weight: 700
      display: inline-block
    &__info
      list-style: none
      padding: 0
      font-size: 0.8em
      span
        margin-right: 2em
        display: inline-block
        min-width: 100px
    &__element
      outline: none
      &--loading
        margin-right: 25px
        position: relative
        overflow: visible
        opacity: 0.5
        cursor: default
        pointer-events: none
        &:hover
          opacity: 0.5
        &:after
          content: ''
          background-image: url('/public/loading.svg')
          background-size: cover
          display: block
          position: absolute
          top: 5px
          right: -28px
          height: 25px
          width: 25px
    &__branch
      display: inline-block
      cursor: pointer
  &-stands
    &__loading
      display: none
      width: 30px
      height: 30px
      position: absolute
      margin: auto
      bottom: 0
      left: 0
      right: 0
      content: url('/public/loading.svg')
      ../__element--loading &
        display: block
    &--large
      overflow-y: scroll
    &__element
      display: inline-block
      position: relative
      height: 70px
      width: 100px
      background-color: #ffffff
      padding: 1em
      cursor: pointer
      border: 1px solid transparent
      border-radius: 0.25em
      &--add
        opacity: 0.7
        transition: 0.3s
        &:hover
          opacity: 1
          transition: 0.3s
        &:before
          content: '+'
          position: absolute
          top: 40px
          user-select: none
          display: inline-block
          font-size: 7em
          text-align: center
          width: calc(100% - 32px)
      &--active
        border: 1px solid #212121
        cursor: default

      &--loading
        opacity: 0.5
        transition: 0.3s
        cursor: default
  &-route
    padding: 0 1em
    &__element
      padding: 0.3em 0.2em 0.3em 0.2em
      transition: 0.3s
      border-radius: 0.25em
      display: inline-block
      margin-right: 1px
      margin-left: 1px
      cursor: pointer

      &:hover
        transition: 0.3s
        background-color: rgb(236, 236, 236)
  &-files
    list-style: none
    padding-left: 1em
    &__element
      cursor: pointer
      transition: 0.3s
      padding: 0.3em 0.2em 0.2em 0.2em
      line-height: 1em
      width: calc(100% - 2em)
      i
        vertical-align: text-bottom
        opacity: 0.6
      &:hover
        transition: 0.3s
        background-color: rgb(236, 236, 236)
  &-terminal
    position: relative
    width: 100%
    height: 100%
    &__input
      position: absolute
      bottom: 0
      border: none
      outline: none
      border-top: 1px solid #cccccc
      width: 100%
      box-sizing: border-box
      padding: 10px 15px
      border-radius: 0 0 0.5em 0.5em
@media screen and (max-width: 1024px)
  .dashboard
    display: block
