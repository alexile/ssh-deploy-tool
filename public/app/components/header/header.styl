.header
  height: 50px
  &-filters
    padding: 0 1em
  &-title
    font-family: 'Libre Barcode 39 Text', cursive
    position: absolute
    left: 1.2em
    margin: 0
    font-weight: normal
    padding-top: 0.6em
    cursor: default
  &-menu
    font-size: 1em
    line-height: 2em
    list-style: none
    position: absolute
    right: 2em
    padding: 0
    margin: 0
    &__li
      display: inline-block
      padding: 0.6em 1em 0.4em 1em
      margin-left: 1em
      opacity: 0.7
      transition: 0.2s
      &:hover
        opacity: 1
        transition: 0.2s
      &--no-padding
        padding-left: 0
        padding-right: 0
        margin-left: 0.5em
      &--active
        font-weight: bolder
      &--bordered
        color: #ffffff
        padding: 0.4em 1em 0.2em 1em
        border-radius: 0.25em
        cursor: pointer
        background-color: #212121
      &--hightlighted
        background-color: #F54337
@media screen and (max-width: 425px)
  .header
    &-title
      left: 10px
